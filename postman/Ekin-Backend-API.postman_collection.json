{
  "info": {
    "name": "Ekin Backend API",
    "description": "Complete API collection for Ekin Backend with authentication",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "App",
      "item": [
        {
          "name": "Get Hello",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            },
            "description": "Root endpoint that returns Hello World message"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login endpoint for external authentication integration"
          },
          "response": []
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            },
            "description": "Endpoint that returns user profile information"
          },
          "response": []
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/verify",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify"]
            },
            "description": "Verify if the provided JWT token is valid"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Visi",
      "item": [
        {
          "name": "Get All Visi",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/visi?page=1&perPage=10&search=",
              "host": ["{{base_url}}"],
              "path": ["visi"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Current page number"
                },
                {
                  "key": "perPage",
                  "value": "10",
                  "description": "Number of items per page"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Search term for filtering by name or description"
                }
              ]
            },
            "description": "Get all visi with pagination and search filter"
          },
          "response": []
        },
        {
          "name": "Get Visi By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/visi/1",
              "host": ["{{base_url}}"],
              "path": ["visi", "1"]
            },
            "description": "Get a specific visi by ID"
          },
          "response": []
        },
        {
          "name": "Create Visi",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Visi Baru\",\n  \"desc\": \"Deskripsi visi baru\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/visi",
              "host": ["{{base_url}}"],
              "path": ["visi"]
            },
            "description": "Create a new visi"
          },
          "response": []
        },
        {
          "name": "Update Visi",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Visi Terupdate\",\n  \"desc\": \"Deskripsi visi yang sudah diupdate\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/visi/1",
              "host": ["{{base_url}}"],
              "path": ["visi", "1"]
            },
            "description": "Update an existing visi by ID"
          },
          "response": []
        },
        {
          "name": "Delete Visi",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/visi/1",
              "host": ["{{base_url}}"],
              "path": ["visi", "1"]
            },
            "description": "Delete a visi by ID"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set base URL if not configured",
          "if (!pm.variables.get('base_url')) {",
          "    pm.variables.set('base_url', 'http://localhost:3000');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract JWT token from login response",
          "if (pm.info.requestName === 'Login' && pm.response.code === 200) {",
          "    try {",
          "        const response = pm.response.json();",
          "        if (response.data && response.data.token) {",
          "            pm.variables.set('jwt_token', response.data.token);",
          "            console.log('JWT token extracted and saved');",
          "        }",
          "    } catch (e) {",
          "        console.log('No token found in login response');",
          "    }",
          "}",
          "",
          "// Log response for debugging",
          "console.log('Response Status:', pm.response.code);",
          "console.log('Response Body:', pm.response.text());"
        ]
      }
    }
  ]
}